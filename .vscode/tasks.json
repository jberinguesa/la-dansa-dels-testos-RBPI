{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "startapp",
            "type": "shell",
            "command": "./startpython.sh"
        },
        {
            "label": "stopapp",
            "type": "shell",
            "command":"ssh pi@192.168.0.122 sudo killall python3"
        },
        {
            "label": "Create venv",
            "type": "shell",
            "command": "python3.11 -m venv env311",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Activate venv",
            "type": "shell",
            "command": "source env311/bin/activate &&pip install --upgrade pip && pip install -r .vscode/requirements.txt",
            "dependsOn": "Create venv",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
